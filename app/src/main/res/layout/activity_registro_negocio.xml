<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityRegistroNegocio"
    android:orientation="vertical"
    android:background="#FFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:fontFamily="@font/mukta_vaani_extralight"
                android:gravity="left"
                android:text="Regístrate"
                android:textColor="@color/colorPrimary"
                android:textSize="23sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/mukta_vaani_extralight"
                android:gravity="left"
                android:text="Haz que tu negocio sea conocido por todos."
                android:textColor="@color/gris_texto"
                android:textSize="14sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="51dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:text="Nombre de Negocio:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edt_nombre_reg_negocio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:hint="Nombre de Negocio"
                    android:inputType="textPersonName"
                    android:textColor="@color/gris_texto"
                    android:textColorHint="@color/gris_texto"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:text="Correo:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edt_correo_reg_negocio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:hint="Correo electrónico"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/gris_texto"
                    android:textColorHint="@color/gris_texto"
                    android:textColorLink="@color/colorPrimary"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:text="Calle:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edt_calle_reg_negocio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:hint="Calle"
                    android:inputType="textPersonName"
                    android:textColor="@color/gris_texto"
                    android:textColorHint="@color/gris_texto"
                    android:textColorLink="@color/colorPrimary"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:text="Colonia:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edt_colonia_reg_negocio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:hint="Colonia"
                    android:inputType="textPersonName"
                    android:textColor="@color/gris_texto"
                    android:textColorHint="@color/gris_texto"
                    android:textColorLink="@color/colorPrimary"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:text="Número:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edt_numero_reg_negocio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:hint="Número"
                    android:inputType="number"
                    android:textColor="@color/gris_texto"
                    android:textColorHint="@color/gris_texto"
                    android:textColorLink="@color/colorPrimary"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:text="Municipio:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edt_municipio_reg_negocio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:hint="Municipio"
                    android:inputType="textPersonName"
                    android:textColor="@color/gris_texto"
                    android:textColorHint="@color/gris_texto"
                    android:textColorLink="@color/colorPrimary"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:text="Descripción:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edt_descripcion_reg_negocio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:hint="Descripción"
                    android:inputType="textPersonName"
                    android:textColor="@color/gris_texto"
                    android:textColorHint="@color/gris_texto"
                    android:textColorLink="@color/colorPrimary"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:text="Teléfono:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edt_telefono1_reg_negocio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:hint="Teléfono"
                    android:inputType="phone"
                    android:textColor="@color/gris_texto"
                    android:textColorHint="@color/gris_texto"
                    android:textColorLink="@color/colorPrimary"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:text="Categoria:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edt_categoria_reg_negocio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:hint="Categoria"
                    android:inputType="textPersonName"
                    android:textColor="@color/gris_texto"
                    android:textColorHint="@color/gris_texto"
                    android:textColorLink="@color/colorPrimary"
                    android:textSize="14sp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:text="Logotipo:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_seleccionar_imagen_negocio"
                    android:layout_width="110dp"
                    android:layout_height="29dp"
                    android:layout_gravity="right"
                    android:background="@drawable/button_roll_design"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:text="Selecciona la foto"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13dp"
                    android:layout_marginLeft="50dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_imagen_reg_negocio"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@drawable/profile" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:text="Contraseña:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edt_password_reg_negocio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:hint="Contraseña"
                    android:inputType="textPassword"
                    android:textColor="@color/gris_texto"
                    android:textColorHint="@color/gris_texto"
                    android:textColorLink="@color/colorPrimary"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:text="Confirmar Contraseña:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edt_confirm_pass_reg_negocio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:hint="Confirma Contraseña"
                    android:inputType="textPassword"
                    android:textColor="@color/gris_texto"
                    android:textColorHint="@color/gris_texto"
                    android:textColorLink="@color/colorPrimary"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_registrar_negocio"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="40dp"
                android:layout_marginRight="30sp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="@font/mukta_vaani_extralight"
                android:text="Registrar"
                android:textColor="#fff"
                android:textSize="13dp" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>