<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentCrearPromociones"
    android:background="#FFF"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mukta_vaani_extralight"
                android:text="Crear Promociones"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/mukta_vaani_extralight"
                android:gravity="left"
                android:text="Crea la promocion que mejor se adapte a tu negocio."
                android:textColor="@color/gris_texto"
                android:textSize="14sp"
                android:layout_marginBottom="22dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:text="Título de la promoción:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edt_titulo_crear_promociones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:backgroundTint="@color/colorPrimary"
                    android:hint="Título de la promoción"
                    android:inputType="textPersonName"
                    android:textColor="@color/gris_texto"
                    android:textColorHint="@color/gris_texto"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_weight="1"
                    android:text="Descripción:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edt_descripcion_crear_promociones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:hint="Descripción"
                    android:inputType="text"
                    android:textColor="@color/gris_texto"
                    android:textColorHint="@color/gris_texto"
                    android:textColorLink="@color/colorPrimary"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_insertar_promocion"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="30sp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="@font/mukta_vaani_extralight"
                android:text="Crear Promoción"
                android:textColor="#fff"
                android:textSize="13dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="La última promocion generada es la que se le mostrará a los clientes."
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:textSize="12sp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="25sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_numero_codigos_crear_promociones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_weight="1"
                    android:text="¿Cuantos códigos deseas generar?"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edt_numero_codigos_crear_promociones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/mukta_vaani_extralight"
                    android:hint="Número de códigos"
                    android:inputType="number"
                    android:textColor="@color/gris_texto"
                    android:textColorHint="@color/gris_texto"
                    android:textColorLink="@color/colorPrimary"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_insertar_codigos"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="30sp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="@font/mukta_vaani_extralight"
                android:text="Crear Códigos"
                android:textColor="#fff"
                android:textSize="13dp" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>